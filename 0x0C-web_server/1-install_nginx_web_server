#!/usr/bin/env bash
# A script to install nginx server and define a simple page response for port 80
sudo apt-get update
sudo apt-get install -y curl wget git
sudo apt-get -y install nginx
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null
sudo tee /etc/nginx/sites-available/lq-enterprise.tech.conf > /dev/null <<EOF
server {
        listen 80;
        server_name lq-enterprise.tech;
        root /var/www/html;
        index index.html;
        location / {
        }
}
EOF
sudo ln -s /etc/nginx/sites-available/lq-enterprise.tech.conf /etc/nginx/sites-enabled/
sudo service nginx start
sudo nginx -s reload
