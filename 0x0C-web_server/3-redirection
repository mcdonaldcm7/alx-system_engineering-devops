#!/usr/bin/env bash
# A Bash script containing commands to automatically configure a redirect_me
apt-get update
apt-get install -y curl wget git
apt-get -y install nginx
echo "Hello World!" | tee /var/www/html/index.html > /dev/null
replace_name="server_name \"lq-enterprise.tech\""
replace="location \/redirect_me {\n\t\treturn 301 https:\/\/google.com;\n\t}\n\tlocation \/ {"
sed -i "s/location \/ {/$replace/" /etc/nginx/sites-available/default
sed -i "/$replace_name/!{ s/server_name _/$replace_name/;}" /etc/nginx/sites-available/default
service nginx start
nginx -s reload
